def solution(S):
  cnt, cnt2, cnt3, idx = 0,0,0,0
  S_size = len(S)
  
  if S_size == 2 and 'aa':
     return 0
  
  while idx < S_size:
    if s[idx:idx+3] == 'aaa' and idx <S_size-2:
      return -1
    elif S[idx:idx+2] == 'aa':
      cnt2 += 2
      idx += 1
    elif S[idx] == 'a':
      cnt3 += 1
    else:
      cnt += 1
    idx += 1
 return ((cnt+1)*2)-(cnt2+cnt3)
 

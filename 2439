/* BOJ 2439 별찍기 -2 */

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		int n = scan.nextInt();
		
		for(int i=0;i<n;i++) {
			for(int y=i;y<n-1;y++) {
				System.out.print(' ');
			}
			for(int x=0;x<=i;x++) {
				System.out.print('*');
			}
			System.out.println("");
		}
		
		
	}
}

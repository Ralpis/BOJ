/* BOJ 2442 별찍기 5 */

import java.util.Scanner;

public class Main {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		int n = scan.nextInt();
		
		for(int i=0;i<n;i++) {
			for(int x=i;x<n-1;x++) {
				System.out.print(' ');
			}
			for(int y=0;y<(2*i)+1;y++) {
				System.out.print('*');
			}
			System.out.println("");
		}
	}
}
